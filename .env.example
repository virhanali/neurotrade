# ============================================
# NeuroTrade AI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# PostgreSQL Database
# --------------------------------------------
POSTGRES_USER=neurotrade
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=neurotrade_db
DATABASE_URL=postgresql://neurotrade:your_secure_password_here@postgres:5432/neurotrade_db

# --------------------------------------------
# Redis Cache
# --------------------------------------------
REDIS_URL=redis://redis:6379/0

# --------------------------------------------
# AI Provider API Keys (REQUIRED)
# --------------------------------------------
# DeepSeek API - Logic/Reasoning Analysis
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenRouter API - Vision/Chart Analysis
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# --------------------------------------------
# Exchange API Keys (Optional - Only for Real Trading)
# --------------------------------------------
# NOT REQUIRED for paper trading / market data fetching
# Only needed when placing real orders on Binance
BINANCE_API_KEY=
BINANCE_API_SECRET=

# --------------------------------------------
# Application Settings
# --------------------------------------------
GO_ENV=development
PYTHON_ENV=development
LOG_LEVEL=info

# --------------------------------------------
# Trading Parameters
# --------------------------------------------
# Market Screener - Filters for finding trading opportunities
MIN_VOLUME_USDT=50000000          # Minimum 24h volume in USDT ($50M = liquid markets)
MIN_VOLATILITY_1H=1.5             # Minimum 1h price change % (1.5% = volatile enough)
TOP_COINS_LIMIT=5                 # Number of top coins to analyze (5-10 recommended)

# Risk Management
MAX_RISK_PERCENT=2.0              # Maximum risk per trade as % of balance (2% standard)
MIN_CONFIDENCE=75                 # Minimum AI confidence % to execute trade (75-85 recommended)

# --------------------------------------------
# Service URLs (Internal Docker Network)
# --------------------------------------------
PYTHON_ENGINE_URL=http://python-engine:8000
GO_APP_URL=http://go-app:8080
